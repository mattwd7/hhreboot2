<%= form_tag create_message_path do %>
	 
	Subject: </br>
	<% if @reply %>
		<%= text_field_tag :subject, "#{@reply}", :size => "75x15" %></br></br>
	<% elsif @subject %>
		<%= text_field_tag :subject, @subject, :size => "75x15" %></br></br>
	<% else %>
		<%= text_field_tag :subject, :size => "75x15" %></br></br>
	<% end %>
	
	Message Body: </br>
	<% if @template %>
		<%= text_area_tag :text, "#{render :partial => @template}", :size => "100x17" %></br></br>
	<% else %>
		<%= text_area_tag :text, "", :size => "100x17" %></br></br>
	<% end %>
	<%= hidden_field_tag :recipient_id, params[:recipient] %>
	<%= hidden_field_tag :return_url, params[:return_url] %>
	<%= submit_tag("Send") %></br>

<% end %>